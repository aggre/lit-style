{
	"name": "@aggre/lit-style",
	"version": "1.1.3",
	"description": "PostCSS preprocessor for Tagged Templates",
	"main": "index.js",
	"files": [
		"*.js",
		"*.d.ts"
	],
	"scripts": {
		"test": "mocha **/*.test.js",
		"pretest": "npm run build",
		"build": "tsc -p ./",
		"lint": "eslint src/** --fix",
		"format": "prettier --write '**/*.{json,md,yml}'",
		"prepare": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aggre/lit-style.git"
	},
	"author": "aggre",
	"contributors": [
		"aggre <hiroyuki.aggre@gmail.com> (https://github.com/aggre)"
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/aggre/lit-style/issues"
	},
	"homepage": "https://github.com/aggre/lit-style#readme",
	"dependencies": {
		"postcss": "^7.0.21",
		"typescript": "^3.6.4"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.5",
		"@typescript-eslint/eslint-plugin": "^2.6.0",
		"@typescript-eslint/parser": "^2.6.0",
		"eslint": "^6.6.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-config-xo": "^0.27.2",
		"eslint-config-xo-typescript": "^0.19.0",
		"eslint-plugin-prettier": "^3.1.1",
		"mocha": "^6.2.2",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^1.18.2"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	}
}
